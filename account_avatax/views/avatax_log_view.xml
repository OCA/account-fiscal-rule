<odoo>
    <record id="avatax_log_form_view" model="ir.ui.view">
        <field name="name">avatax.log.form.view</field>
        <field name="model">avatax.log</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Avatax Type" create="0" edit="0">
                <group>
                    <field name="avatax_request" groups="base.group_no_one" />
                    <field name="avatax_response" groups="base.group_no_one" />
                    <field name="create_date_time" />
                    <field name="avatax_type" />
                </group>
            </form>
        </field>
    </record>
    <record id="avatax_log_tree_view" model="ir.ui.view">
        <field name="name">avatax.log.tree.view</field>
        <field name="model">avatax.log</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Avatax Type" create="0" edit="0">
                <field name="avatax_request" groups="base.group_no_one" />
                <field name="avatax_response" groups="base.group_no_one" />
                <field name="create_date_time" />
                <field name="avatax_type" />
            </tree>
        </field>
    </record>
    <record id="avatax_log_act_window" model="ir.actions.act_window">
        <field name="name">Avatax log</field>
        <field name="res_model">avatax.log</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Notification</h2>
                <div class="row mt16 o_settings_container" id="notification_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label
                                for="avatax_api_call_notification_ids"
                                string="API Call Counter"
                            />
                            <div class="text-muted">
                                 Avatax API call counter send notification email on this email.
                            </div>
                            <div class="content-group">
                                <field
                                    name="avatax_api_call_notification_ids"
                                    class="oe_inline"
                                    widget="many2many_tags"
                                />
                            </div>
                            <label
                                for="call_counter_limit"
                                string="Call Counter Limit"
                            />
                            <div class="text-muted">
                                 Avatax API call counter limit.
                            </div>
                            <div class="content-group">
                                <field name="call_counter_limit" class="oe_inline" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <menuitem
        action="avatax_log_act_window"
        id="menu_avatax_log"
        parent="menu_avatax"
        sequence="25"
    />
</odoo>
