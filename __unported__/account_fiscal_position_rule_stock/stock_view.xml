<?xml version="1.0" encoding="utf-8"?>
<openerp>

	<data>

		<record id="account_fiscal_position_rule_stock_view_picking_inherit_form2" model="ir.ui.view">
			<field name="name">account.fiscal.position.rule.stock.picking.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock_account.view_picking_inherit_form2" />
			<field name="priority">24</field>
			<field name="arch" type="xml">
				<field name="invoice_state" position="after">
					<field name="fiscal_position" attrs="{'readonly':[('invoice_state','!=','2binvoiced')]}" />
				</field>
			</field>
		</record>
		
		<record id="account_fiscal_position_rule_stock_view_picking_form" model="ir.ui.view">
			<field name="name">account.fiscal.position.rule.stock.picking.form</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="priority">24</field>
			<field name="arch" type="xml">
				<field name="partner_id" position="attributes">
					<attribute name="on_change">onchange_partner_id(partner_id, company_id)</attribute>
				</field>
			</field>
		</record>

	</data>

</openerp>
