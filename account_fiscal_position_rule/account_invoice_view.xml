<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	
	<data>
		
		<record model="ir.ui.view" id="view_report_intrastat_invoice_form1">
			<field name="name">account.fiscal.position.rule.invoice.form1</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="partner_id" position="replace">	       
                	<field name="partner_id" on_change="onchange_partner_id(type, partner_id, date_invoice, payment_term, company_id, partner_bank)"/>
				</field>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_report_intrastat_invoice_form2">
			<field name="name">account.fiscal.position.rule.invoice.form2</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="company_id" position="replace">	       
                	<field name="company_id" on_change="onchange_company_id(company_id, partner_id, address_invoice_id)"/>
				</field>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_report_intrastat_invoice_form3">
			<field name="name">account.fiscal.position.rule.invoice.form3</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<field name="address_invoice_id" position="replace">	       
					<field domain="[('partner_id','=',partner_id)]" name="address_invoice_id" on_change="onchange_address_invoice_id(company_id, partner_id, address_invoice_id)"/>
				</field>
			</field>
		</record>
		
	</data>

</openerp>
