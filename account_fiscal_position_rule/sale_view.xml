<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data noupdate="True">
		<record id="view_order_form1" model="ir.ui.view">
			<field name="name">account_fiscal_postion_rule_form_view_order_form1</field>
	   		<field name="model">sale.order</field>
	   		<field name="inherit_id" ref="sale.view_order_form"/>
	   		<field name="priority">32</field>
	   		<field name="arch" type="xml">
	        	<field name="user_id" position="replace">
					<field name="user_id" on_change="onchange_user_id(user_id, partner_id, partner_invoice_id)"/>
	        	</field>
	        </field>
		</record>
    </data>

    <data noupdate="True">		
		<record id="view_order_form2" model="ir.ui.view">
			<field name="name">account_fiscal_postion_rule_form_view_order_form2</field>
	   		<field name="model">sale.order</field>
	   		<field name="inherit_id" ref="sale.view_order_form"/>
	   		<field name="priority">32</field>
	   		<field name="arch" type="xml">
	        	<field name="partner_invoice_id" position="replace">
	        	<field domain="[('partner_id','=',partner_id)]" name="partner_invoice_id" on_change="onchange_partner_invoice_id(partner_invoice_id, partner_id, user_id)"/>
	        	</field>
	        </field>
		</record>
    </data>

</openerp>