<odoo>

    <record id="view_account_fiscal_position_tag_tree" model="ir.ui.view">
        <field name="model">account.fiscal.position.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="view_account_fiscal_position_tag_form" model="ir.ui.view">
        <field name="model">account.fiscal.position.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" />
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="code" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_fiscal_position_tag" model="ir.actions.act_window">
        <field name="name">Fiscal Position Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.fiscal.position.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_account_fiscal_position_tag"
        parent="account.account_account_menu"
        action="action_account_fiscal_position_tag"
        sequence="6"
    />
</odoo>
