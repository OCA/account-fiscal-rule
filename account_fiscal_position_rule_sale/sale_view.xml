                    </attribute>
                </field>
                <field name="partner_id" position="attributes">
                    <attribute name="on_change">
                        onchange_partner_id(partner_id, context, shop_id)
                    </attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
