<odoo>
    <record id="res_config_settings_view_form_l10n_eu_oss" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.eu.oss</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="eu_service" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="l10n_eu_oss">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">EU OSS</span>
                        <div class="text-muted">
                            Apply EU taxes regarding OSS
                        </div>
                        <div class="mt8">
                            <button
                                name="%(l10n_eu_oss.l10n_eu_oss_wizard_action)d"
                                icon="fa-arrow-right"
                                type="action"
                                string="Add new taxes"
                                class="btn-link"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
