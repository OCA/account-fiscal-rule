<odoo>
    <record
        id="view_order_form_inherit_account_avatax_sale_fire_protection"
        model="ir.ui.view"
    >
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="is_fl_address" invisible="1" />
                <field
                    name="is_fl_taxation"
                    attrs="{'invisible': [('is_fl_address', '=', False)]}"
                />
            </field>
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position="after"
            >
                <field name="non_taxable_product_id" invisible="1" />
                <field name="taxable_product_id" invisible="1" />
                <field name="is_fl_tax_line" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
