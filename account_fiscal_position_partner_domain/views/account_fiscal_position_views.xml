<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_position_form_fiscal_position_domain" model="ir.ui.view">
        <field name="name">view.account.position.form.fiscal.position.domain</field>
        <field name="model">account.fiscal.position</field>
        <field name="inherit_id" ref="account.view_account_position_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='zip_to']/.." position="after">
                <field
                    name="partner_domain"
                    widget="domain"
                    options="{'model': 'res.partner'}"
                    attrs="{'invisible': [('auto_apply', '!=', True)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
