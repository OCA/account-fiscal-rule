<odoo>
    <record id="view_product_category_form" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="account.view_category_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='account_property']" position="after">
                <group
                    name="fiscal_property"
                    string="Fiscal Settings"
                    colspan="4"
                    col="4"
                >
                    <group name="classification" colspan="4">
                        <field name="fiscal_restriction" />
                        <field
                            name="fiscal_classification_ids"
                            widget="many2many_tags"
                            attrs="{'invisible': [('fiscal_restriction', '=', False)]}"
                        />
                        <button
                            name="apply_classification_to_childs"
                            type="object"
                            string="Apply to Child Categories"
                            icon="fa-sitemap"
                        />
                    </group>
                    <group
                        name="forbidden"
                        string="Products with Forbidden Classification"
                        colspan="4"
                        col="4"
                        attrs="{'invisible': [('forbidden_classification_template_qty','=', 0)]}"
                    >
                        <field
                            name="forbidden_classification_template_qty"
                            colspan="2"
                        />
                        <newline />
                        <field
                            name="forbidden_classification_template_ids"
                            nolabel="1"
                            colspan="4"
                        >
                            <tree>
                                <field name="name" />
                                <field name="fiscal_classification_id" />
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_product_category_tree" model="ir.ui.view">
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field
                    name="fiscal_classification_ids"
                    widget="many2many_tags"
                    string="Fiscal Classification"
                    groups="account.group_account_invoice"
                />
            </field>
        </field>
    </record>
</odoo>
