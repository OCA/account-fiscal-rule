<odoo>

    <!-- Overload: product.template -->
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="taxes_id" position="before">
                <field name="fiscal_classification_id" colspan="2" quick_create="false"/>
            </field>
            <field name="taxes_id" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
            <field name="supplier_taxes_id" position="attributes">
                <attribute name="readonly">True</attribute>
            </field>
        </field>
    </record>

    <!-- Define: account.product.fiscal.classification.template -->
    <record id="view_account_product_fiscal_classification_template_tree" model="ir.ui.view">
        <field name="model">account.product.fiscal.classification.template</field>
        <field name="arch" type="xml">
            <tree colors="gray:active == False;">
                <field name="code"/>
                <field name="name"/>
                <field name="purchase_tax_ids"/>
                <field name="sale_tax_ids"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_account_product_fiscal_classification_template_form" model="ir.ui.view">
        <field name="model">account.product.fiscal.classification.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_left">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group col="4" name="description">
                        <field name="code"/>
                        <field name="active"/>
                        <newline/>
                        <field name="description" colspan="4"/>
                    </group>
                    <separator string="Taxes"/>
                    <group name="tax_ids" col="4">
                        <field name="purchase_tax_ids" quick_create="false" widget="many2many_tags"/>
                        <field name="sale_tax_ids" quick_create="false" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define: account.product.fiscal.classification -->
    <record id="view_account_product_fiscal_classification_tree" model="ir.ui.view">
        <field name="model">account.product.fiscal.classification</field>
        <field name="arch" type="xml">
            <tree colors="gray:active == False;">
                <field name="code"/>
                <field name="name"/>
                <field name="purchase_tax_ids"/>
                <field name="sale_tax_ids"/>
                <field name="product_tmpl_qty"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_account_product_fiscal_classification_form" model="ir.ui.view">
        <field name="model">account.product.fiscal.classification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title oe_left">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons">
                        <button type="action"
                                class="oe_stat_button"
                                id="invoice_button"
                                icon="fa-bars"
                                name="%(action_template_list_by_fiscal_classification)d"
                                context="{'search_default_fiscal_classification_id': active_id}"
                                attrs="{'invisible': [('product_tmpl_qty', '=', 0)]}">
                            <field string="Products" widget="statinfo" name="product_tmpl_qty"/>
                    </button>
                    </div>
                    <group col="4" name="description">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="active"/>
                        <field name="code"/>
                        <newline/>
                        <field name="description" colspan="4"/>
                    </group>
                    <group col="2" name="action_wizard_change_fiscal_classification">
                        <button name="%(action_wizard_change_fiscal_classification)d"
                            string="Move Products into another Fiscal Classification"
                            type="action" class="oe_link"
                            groups="account.group_account_manager"
                            attrs="{'invisible':[('product_tmpl_qty','=',0)]}"/>
                    </group>
                    <separator string="Taxes"/>
                    <group col="4" name="tax_ids">
                        <field name="purchase_tax_ids" quick_create="false" widget="many2many_tags"/>
                        <field name="sale_tax_ids" quick_create="false" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Define: wizard.change.fiscal.classification -->
    <record id="view_wizard_change_fiscal_classification" model="ir.ui.view">
        <field name="model">wizard.change.fiscal.classification</field>
        <field name="arch" type="xml">
            <form>
                <group name="fiscal_classification">
                    <field name="old_fiscal_classification_id"/>
                    <field name="new_fiscal_classification_id"/>
                </group>
                <footer>
                    <button string="Apply" name="button_change_fiscal_classification" type="object" class="oe_highlight"/>
                    <label string="or"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Define: wizard.account.product.fiscal.classification -->
    <record id="view_wizard_account_product_fiscal_classification" model="ir.ui.view">
        <field name="name">Generate Product Fiscal Classification from Templates</field>
        <field name="model">wizard.account.product.fiscal.classification</field>
        <field name="arch" type="xml">
            <form string="Generate Product Fiscal Classification from Templates" version="7.0">
                <group string="This will automatically configure all product fiscal classification" name="company">
                    <field name="company_id" />
                </group>
                <footer>
                    <button name="action_create" string="Create" type="object" class="oe_highlight" /> ou
                    <button special="cancel" string="Cancel" type="object" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
